#app > .layout.landing
	text-align center
	> .map
		position absolute
		top 0
		right 0
		bottom 0
		left 0
	> form.search
		display none
	> .button
		position absolute
		display inline-block
		margin 0
		padding 0
		border none
		font-size 0
		font-size normal
		line-height 0
		width 60px
		height 60px
		overflow hidden
		> svg
			width 100%
			height 100%
			stroke black
			stroke-width 15px
			fill white
			&:hover
				fill #f4f4f4
		&:active
			> svg
				stroke orange
		&.filters
			right 10px
			top 10px
		&.menu
			left 10px
			bottom 10px
		&.location
			right 10px
			bottom 10px
	> .settings
		display none
		> .facebook,
			background-color #3B5998
			color white
			padding 20px 30px
			font-size 20px
			font-weight bold

@media (max-width: 768px)
	#app > .layout.landing
		> .button
			width 30px
			height 30px
