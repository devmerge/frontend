#app .venues.cover
	position relative
	height 140px
	margin 0
	overflow hidden
	a
		text-decoration none
	.photo
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		background-size cover
		background-repeat no-repeat
		background-position center
		background-color silver
		z-index 0
	.about
		background-image linear-gradient(left, black, transparent)
		display flex
		height 100%
		width 100%
		position relative
		z-index 1
		.icon
			flex none
			width 25%
			min-width 80px
			max-width 140px
			display flex
			justify-content center
			align-items center
			font-size 0
			padding 10px 0 10px 10px
			.picture
				background-color white
				display inline-block
				img
					box-sizing content-box
					width calc(100% \- 10px)
					max-width 100px
					border 1px solid silver
					margin 5px
		.place
			flex auto
			margin 10px
			display flex
			flex-direction column
			justify-content center
			align-items flex-start
			color white
			text-shadow 1px 1px 2px rgba(0, 0, 0, 1)
			.name
				font-size 16px
				color white
				font-weight bold
			.address
				font-size 12px
				font-weight normal
			.directions
				display inline-block
				padding 2px 4px
				color white
				font-size 10px
				border 1px solid white
				padding 2px 4px
				margin 4px 0 0 0
