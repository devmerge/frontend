#app .venues.details
	position absolute
	bottom 0
	left 0
	right 0
	display flex
	justify-content center
	&.loading
		height 80px
	.progress
		display flex
		justify-content center
		align-items center
		flex auto
		max-height 100%
		max-width 80%
		border-style solid
		border-color gray
		border-width 5px 5px 0 5px
		border-radius 5px 5px 0 0
		background-size 50px 50px
		animation barberpole 0.5s linear infinite
		background-color rgba(black, 0.75)
		background-image linear-gradient(
			45deg,
			rgba(black, 0.3) 25%,
			transparent 25%,
			transparent 50%,
			rgba(black, 0.3) 50%,
			rgba(black, 0.3) 75%,
			transparent 75%,
			transparent)
		.message
			display inline-block
			flex none
			color white
			font-size 24px
			font-weight bold

@keyframes barberpole {
	from {
		background-position: 0 0;
	}
	to {
		background-position: 100px 50px;
	}
}
